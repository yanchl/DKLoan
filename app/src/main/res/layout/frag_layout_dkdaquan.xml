<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarDefaultDelayBeforeFade="20000"
    android:scrollbarFadeDuration="4000"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_loan_1"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_loan_item_bg1"
            android:paddingLeft="12dip">

            <ImageView
                android:id="@+id/iv_loan_1"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/fenlei1"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/iv_loan_1">

                <TextView
                    android:id="@+id/tv_loan_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="微额极速贷"
                    android:textColor="@android:color/white"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loan_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="有手机服务密码就能贷，额度500-50000元"
                    android:textColor="#EDEDED"
                    android:textSize="12dip" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loan_2"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_loan_item_bg2"
            android:paddingLeft="12dip">

            <ImageView
                android:id="@+id/iv_loan_2"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/fenlei2"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/iv_loan_2">

                <TextView
                    android:id="@+id/tv_loan_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="热门极速贷"
                    android:textColor="@android:color/white"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loan_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="最受欢迎的热门贷款，额度500-50000元"
                    android:textColor="#EDEDED"
                    android:textSize="12dip" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loan_3"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_loan_item_bg3"
            android:paddingLeft="12dip">

            <ImageView
                android:id="@+id/iv_loan_3"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/fenlei3"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/iv_loan_3">

                <TextView
                    android:id="@+id/tv_loan_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="大额贷款"
                    android:textColor="@android:color/white"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loan_3"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="适合大金额贷款，额度20000-500000元"
                    android:textColor="#EDEDED"
                    android:textSize="12dip" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loan_4"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_loan_item_bg4"
            android:paddingLeft="12dip">

            <ImageView
                android:id="@+id/iv_loan_4"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/fenlei4"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/iv_loan_4">

                <TextView
                    android:id="@+id/tv_loan_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="信用卡贷款"
                    android:textColor="@android:color/white"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loan_4"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="有信用卡账单就能贷，额度2000-500000元"
                    android:textColor="#EDEDED"
                    android:textSize="12dip" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loan_5"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_loan_item_bg5"
            android:paddingLeft="12dip">

            <ImageView
                android:id="@+id/iv_loan_5"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/fenlei5"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/iv_loan_5">

                <TextView
                    android:id="@+id/tv_loan_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="线下大额贷"
                    android:textColor="@android:color/white"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loan_5"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="主打线下的大额贷款，额度20000-100000元"
                    android:textColor="#EDEDED"
                    android:textSize="12dip" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_loan_6"
            android:layout_width="fill_parent"
            android:layout_height="90dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/all_loan_item_bg6"
            android:paddingLeft="12dip">

            <ImageView
                android:id="@+id/iv_loan_6"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/fenlei6"
                android:layout_centerVertical="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/iv_loan_6">

                <TextView
                    android:id="@+id/tv_loan_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="大学生贷款"
                    android:textColor="@android:color/white"
                    android:textSize="16dip"
                    android:textStyle="normal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loan_6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="12dp"
                    android:text="学生贷款还有优惠拿，额度100-50000元"
                    android:textColor="#EDEDED"
                    android:textSize="12dip" />
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</ScrollView>