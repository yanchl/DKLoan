        <RelativeLayout
            android:id="@+id/d_shoujidai"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/btn_tem_selector"
            android:paddingLeft="12dip"
            android:paddingRight="12dip" >

            <ImageView
                android:id="@+id/logo7"
                android:layout_width="45dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_shoujidai" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/logo7"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo1"
                    android:gravity="center"
                    android:text="@string/d_shoujidai"
                    android:textColor="#666666"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1万元以下分期或单期借款,最快当天放款"
                    android:textColor="#4B7AC2"
                    android:textSize="12dip" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/d_yirendai"
            android:layout_width="fill_parent"
            android:layout_height="60dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/btn_tem_selector"
            android:paddingLeft="12dip"
            android:paddingRight="12dip" >

            <ImageView
                android:id="@+id/logo8"
                android:layout_width="45dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_yirendai" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dip"
                android:layout_toRightOf="@+id/logo8"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo1"
                    android:gravity="center"
                    android:text="@string/d_yirendai"
                    android:textColor="#666666"
                    android:textSize="14dip"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="无抵押信用贷,手续费太高,小编不推荐"
                    android:textColor="#4B7AC2"
                    android:textSize="12dip" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>